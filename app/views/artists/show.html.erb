<%= stylesheet_link_tag params[:controller] %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!-- artist's photo
        img_tag(@artist.photo , class: 'img-thumbnail rounded')
      -->
    </div>
    <div class="col-md-9">
      <h2><%= @artist.name %></h2>
    </div>
  </div>
  <div class="row">
    <!-- buttons -->
    <div class="col-md-2">
      <% if current_user.fan? %>
        <% if @is_follower %>
          <%= link_to 'Dejar de seguir', unfollow_artist_path(@artist), method: :post, class: 'btn btn-success follow-button' %>
        <% else %>
          <%= link_to 'Seguir artista', follow_artist_path(@artist), method: :post, class: 'btn btn-success follow-button' %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <ul class="nav nav-tabs" id="artist-tab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="all-tab" data-toggle="tab" href="#about" role="tab" aria-controls="all" aria-selected="true">Acerca de</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="all-tab" data-toggle="tab" href="#next_events" role="tab" aria-controls="all" aria-selected="true">Pr&oacuteximos eventos</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="all-tab" data-toggle="tab" href="#products" role="tab" aria-controls="all" aria-selected="true">Productos</a>
        </li>
      </ul>

      <div class="tab-content" id="artist-tab-content">
        <div class="tab-pane fade show active" id="about" role="tabpanel" aria-labelledby="about-tab">
          <p><em><%= @artist.description %></em></p>
        </div>
        <div class="tab-pane fade" id="next_events" role="tabpanel" aria-labelledby="next_events-tab">
          <%= render 'events/events_list' %>
        </div>
        <div class="tab-pane fade" id="products" role="tabpanel" aria-labelledby="products-tab">

        </div>
      </div>
    </div>
  </div>
</div>
