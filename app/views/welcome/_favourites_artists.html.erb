<div class="container marketing">
  <div class="row">
    <% loop do %>
      <div class="col-md-4 text-center">
        <% artist = @main_artists.next %>
        <%= image_tag(user_image_path(artist.user), size: '140x140' ,class: 'center-image rounded-circle') %>
        <h4><%= link_to artist.name, artist_path(artist.name) %></h4>
        <p><%= artist.description %></p>
      </div>
    <% end %>
  </div>
</div>