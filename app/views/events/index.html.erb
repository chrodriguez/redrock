<%= stylesheet_link_tag params[:controller] %>
<div class="container">
  <div class="row">
    <div class="col-md-12">

      <h2>Eventos</h2>
      <%= link_to(icon('far', 'calendar-plus', 'Nuevo evento'), new_artist_event_path(@artist) , class: ['btn btn-success','new-button']) %>

      <ul class="nav nav-tabs" id="event-tab" role="tablist">
        <li class="nav-item event-item">
          <a class="nav-link active" id="all-tab" data-toggle="tab" href="#all" role="tab" aria-controls="all" aria-selected="true">Todos</a>
        </li>
        <li class="nav-item event-item">
          <a class="nav-link" id="past-tab" data-toggle="tab" href="#past" role="tab" aria-controls="past" aria-selected="true">Pasados</a>
        </li>
        <li class="nav-item event-item">
          <a class="nav-link" id="next-tab" data-toggle="tab" href="#next" role="tab" aria-controls="next" aria-selected="true">Pr&oacuteximos</a>
        </li>
      </ul>

      <div class="tab-content" id="event-tab-content">
        <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
          <%= @events = @all_events
            render 'events_list', locals: { events: @events }
          %>
        </div>
        <div class="tab-pane fade" id="past" role="tabpanel" aria-labelledby="past-tab">
          <%= @events = @past_events
            render 'events_list', locals: { events: @events }
          %>
        </div>
        <div class="tab-pane fade" id="next" role="tabpanel" aria-labelledby="next-tab">
          <%= @events = @next_events
            render 'events_list', locals: { events: @events }
          %>
        </div>
      </div>
    </div>
  </div>
</div>