
<%= simple_form_for([@artist,@event], defaults: { input_html: { class: 'form-control' }}) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title, required: true, autofocus: true, placeholder: 'Ingrese el título del evento' %>
    <%= f.input :description, placeholder: 'Ingrese la información del evento para que sus seguidores puedan saber de que se trata!' %>
    <%= f.input :place, placeholder: 'Ingrese el lugar donde se desarrollará el evento' %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
  </div>

  <div class="form-actions">
    <%= f.submit @button_name, class: 'btn btn-success' %>
    <%= link_to 'Cancelar', artist_events_path(@artist, event), { class: 'btn btn-secondary', role: :button } %>
  </div>
<% end %>
