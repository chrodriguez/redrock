<ul class="nav nav-tabs" id="event-tab" role="tablist">
    <li class="nav-item event-item">
        <a class="nav-link active" id="all-tab" data-toggle="tab" href="#all" role="tab" aria-controls="all" aria-selected="true">
          Todos
          <span class="badge badge-pill badge-primary"><%= @all_events.size %></span>
        </a>
    </li>
    <li class="nav-item event-item">
        <a class="nav-link" id="past-tab" data-toggle="tab" href="#past" role="tab" aria-controls="past" aria-selected="true">
          Pasados
          <span class="badge badge-pill badge-primary"><%= @past_events.size %></span>
        </a>
    </li>
    <li class="nav-item event-item">
        <a class="nav-link" id="next-tab" data-toggle="tab" href="#next" role="tab" aria-controls="next" aria-selected="true">
          Pr&oacuteximos
          <span class="badge badge-pill badge-primary"><%= @next_events.size %></span>
        </a>
    </li>
</ul>

<div class="tab-content" id="event-tab-content">
    <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
        <%= @events = @all_events
        render 'events/events_list', locals: { events: @events }
        %>
    </div>
    <div class="tab-pane fade" id="past" role="tabpanel" aria-labelledby="past-tab">
        <%= @events = @past_events
        render 'events/events_list', locals: { events: @events }
        %>
    </div>
    <div class="tab-pane fade" id="next" role="tabpanel" aria-labelledby="next-tab">
        <%= @events = @next_events
        render 'events/events_list', locals: { events: @events }
        %>
    </div>
</div>