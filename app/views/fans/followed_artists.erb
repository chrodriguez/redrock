<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Artistas</h2>
    </div>
  </div>
  <div class="row">
  <% i = 0
    loop do %>

      <div class="col-lg-3 offset-1 ">
        <% artist = @followed_artists.next %>
        <%= image_tag(user_image_path(artist.user), size: '100x100' ,class: 'rounded-circle') %>
        <h4><%= link_to artist.name, artist_path(artist.name) %></h4>
        <small><%= artist.amount_of_followers.to_s << ' seguidores' %></small>
      </div>

      <% i+= 1
        if (i.modulo 3).equal? 0 %>
        </div>
        <div class="row">
      <% end %>
      <% if i.equal? @followed_artists.size %>
        </div>
      <% end %>
  <% end %>
</div>