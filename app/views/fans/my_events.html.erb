<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Eventos</h2>
      <%= render 'events/events_nav' %>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-12">
      <h4>Otros eventos que te pueden interesar..</h4>
    </div>
  </div>
    <% @other_events.each do |event| %>
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-body">
              <span class="date">
                <div class="day"><%= event.start_date.strftime('%d') %></div>
                <div class="month"><%= event.start_date.strftime('%^b ') %></div>
              </span>
              <h1 class="card-title event-title">
                <%= link_to event.title, artist_event_path(event.artist, event) %>
              </h1>
              <p class="card-text"><%= event.description[0...50] << '...' %></p>

            </div>
          </div>
        </div>
      </div>
    <% end %>
</div>